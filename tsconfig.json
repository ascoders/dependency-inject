{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "es6",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "built",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "built"
  ]
}